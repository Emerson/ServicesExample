<form {{action 'submit' on='submit'}}>

  <div class="form-group">
    <label for="email">Email</label>
    {{input type='text' value=email id='email' classNames='form-control' placeholder='Email Address'}}
  </div>

  <div class="form-group">
    <label for="password">Password</label>
    {{input type='password' value=password id='password' classNames='form-control' placeholder='Password'}}
  </div>

  {{#if error}}
    <div class='alert alert-warning'>
      There was a problem with your email or password
    </div>
  {{/if}}

  <div class="form-group">
    <input type="submit" value="Login" class="btn btn-primary"> or <a id='showRegistration' href="#" {{action 'showRegistration' bubbles=false}}>Register</a>
  </div>

</form>